<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="id_number_authentication.login" inherit_id="web.login" name="Password policy data for auth_signup">
        <xpath expr="//label[@for='login']" position="replace">
            <label for="login">Your ID Number</label>
        </xpath>
        <xpath expr="//input[@name='login']" position="attributes">
            <attribute name="placeholder">Enter your ID Number</attribute>
        </xpath>
    </template>
</odoo>