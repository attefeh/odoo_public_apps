<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_partner_form_reset_password" model="ir.ui.view">
        <field name="name">res.partner.form.reset.password</field>
        <field name="model">partner.reset.password</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="user_id" readonly="1"/>
                        <field name="new_password" required="1"/>
                        <field name="re_new_password" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_reset_password" string="Reset Password" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>